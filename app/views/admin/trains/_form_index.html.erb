<%= form_for [:admin, train]  do |f| %>
<tr class="form-group form-group-sm train_form_tr_<%= train.id %>" style = "display: none" >
    <td>
      <%= f.text_field :number, class: 'form-control' %>
    </td>

    <td>
      <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title, {prompt: 'Выберите станцию'}, class: 'form-control' %>
    </td>

    <td>
      <%= f.collection_select :route_id, Route.all, :id, :name, {prompt: 'Выберите маршрут'}, class: 'form-control' %>
    </td>

    <td>
      <%= f.label(:reverse_sort_true, class: 'radio-inline') %>
      <%= f.radio_button(:reverse_sort, true) %>
      <%= f.label(:reverse_sort_false, class: 'radio-inline') %>
      <%= f.radio_button(:reverse_sort, false) %>
    </td>

    <td>
      <%= f.submit "#{train.new_record? ? t('common.create') : t('common.update')}", class: 'btn btn-sm btn-success' %>
      <%= link_to t('common.cancel'), '', class: 'btn btn-sm train_edit_cancel btn-danger' , data: {train_id: train.id} %>
      <%# link_to t('common.show'), admin_train_path(train) , class: 'btn btn-sm btn-default', class: 'btn btn-sm btn-info' , class: 'btn btn-sm btn-info'%>
      <%= link_to t('common.delete'), [:admin, train], method: :delete, data: { confirm: t('common.delete_confirm') }, class: 'btn btn-sm btn-danger' %>
    </td>
  <% end %>
</tr>
