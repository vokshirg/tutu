<%= form_for([:admin, route]) do |f| %>
  <%= render 'common/errors', resource: route %>
<tr class="form-group form-group-sm route_form_tr_<%= route.id %>" style = "display: none">
  <td>
    <div class="form-group">

      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </td>
  <td>
    <div class="form-group">

      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, {multiple: true, class: 'form-control'} %>
    </div>
  </td>
  <td>
    <div class="form-group">
      <%= f.submit "#{route.new_record? ? t('common.create') : t('common.update')}", class: 'btn btn-sm btn-success' %>
      <%# link_to t('common.show'), admin_route_path(route) , class: 'btn btn-sm btn-default', class: 'btn btn-sm btn-info' , class: 'btn btn-sm btn-info'%>
      <%= link_to t('common.cancel'), '', class: 'btn btn-sm route_edit_cancel btn-danger' , data: {route_id: route.id} %>
      <%= link_to t('common.delete'), [:admin, route], method: :delete, data: { confirm: t('common.delete_confirm') }, class: 'btn btn-sm btn-danger' %>
    </div>

  </td>
</tr>
<% end %>
