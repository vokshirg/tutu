<tr class="route_tr_<%= route.id %>">
  <td><%= route.name %></td>
  <td>
    <% route.railway_stations.each do |st| %>
      <%= st.title %>
      <% end %>
  </td>
  <td>
    <%= link_to t('common.edit'), '' , class: 'btn btn-sm btn-warning route_edit_button' , data: {route_id: route.id} %>
    <%= link_to t('common.show'), admin_route_path(route), class: 'btn btn-sm btn-info'%>
    <%= link_to t('common.delete'), [:admin, route], method: :delete, data: { confirm: t('common.delete_confirm') }, class: 'btn btn-sm btn-danger' %>
  </td>
</tr>
<%= render 'form_index', route: route %>
