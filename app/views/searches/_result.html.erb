<tr>
  <td><%= result.number %></td>
  <td><%= result.route.name %></td>
  <td>
    <%= form_tag new_ticket_path, method: :get do %>
      <%= hidden_field_tag :end_station_id, @end_station_id %>
      <%= hidden_field_tag :start_station_id, @start_station_id %>
